{
  "name": "bigfoot-connect",
  "version": "1.0.2",
  "main": "main.js",
  "productName": "BIGFOOT Connect",
  "description": "Application to share bandwidth and get rewarded in BIG",
  "author": "BIGFOOT",
  "license": "ISC",
  "type": "commonjs",
  "scripts": {
    "start": "electron-forge start",
    "pack": "cross-env NODE_ENV=production electron-builder --dir",
    "dist": "cross-env NODE_ENV=production electron-builder",
    "dist-publish": "cross-env NODE_ENV=production electron-builder --publish=always",
    "package": "cross-env NODE_ENV=production electron-forge package",
    "make": "cross-env NODE_ENV=production electron-forge make"
  },
  "build": {
    "appId": "com.bigfoot.connect",
    "productName": "BIGFOOT Connect",
    "publish": [
      {
        "provider": "github",
        "owner": "fabricioricard",
        "repo": "BIGFOOT-Connect"
      }
    ],
    "files": [
      "**/*",
      "assets/**/*"
    ],
    "asarUnpack": [
      "assets/packetcrypt.exe",
      "assets/icon.ico"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "extraFiles": [
      {
        "from": "assets/icon.ico",
        "to": "icon.ico"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png"
    },
    "mac": {
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "cross-env": "^7.0.3",
    "electron": "37.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "combined-stream": "^1.0.8",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.1.7",
    "firebase": "^11.10.0",
    "follow-redirects": "^1.15.9",
    "node-fetch": "^2.7.0",
    "speedtest-net": "^2.2.0"
  }
}